/* Login screen styling */
#form-content {
    align: center middle;
    width: 60;
    height: auto;
    background: $panel;
    border: round $primary;
    padding-top: 1;
    padding-bottom: 2;
    padding-left: 4;
    padding-right: 4;
}

#form-content Input {
    width: 100%;
    margin: 1 0;
}

#form-content Button {
    width: 100%;
    margin-top: 2;
}

#form-content Static {
    text-align: center;
    width: 100%;
    margin: 1 0;
}